{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/src/**/*",
			"**/.vscode/**/*",
			"**/index.html",
			"**/vite.config.ts",
			"!**/src/routeTree.gen.ts",
			"!**/src/components/ui",
			"!**/src/styles/*.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space"
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							[
								":BUN:",
								":NODE:"
							],
							":BLANK_LINE:",
							"react",
							"vite",
							":PACKAGE:",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				}
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "off"
			},
			"style": {
				"useFilenamingConvention": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"extends": [
		"ultracite/core",
		"ultracite/react"
	]
}
